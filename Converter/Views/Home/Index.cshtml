<!-- ***  Length  *** -->
<script>
    document.getElementById('lengthConvert').addEventListener('click', function() {
        const value = parseFloat(document.getElementById('lengthValue').value);
        const fromUnit = document.getElementById('lengthFrom').value;
        const toUnit = document.getElementById('lengthTo').value;

        const conversionRates = {
            in: 2.54, // inches to cm
            cm: 0.393701, // cm to inches
            ft: 0.3048, // feet to meters
            m: 3.28084, // meters to feet
            km: 0.621371, // kilometers to miles
            mi: 1.60934, // miles to kilometers
            yard: 0.9144, // yards to meters
        };

        let result;

        // Convert to meters first
        let valueInMeters;
        switch (fromUnit) {
            case 'in':
                valueInMeters = value * conversionRates.in / 100; // inches to meters
                break;
            case 'cm':
                valueInMeters = value / 100; // cm to meters
                break;
            case 'ft':
                valueInMeters = value * conversionRates.ft; // feet to meters
                break;
            case 'm':
                valueInMeters = value; // already in meters
                break;
            case 'km':
                valueInMeters = value * 1000; // kilometers to meters
                break;
            case 'mi':
                valueInMeters = value * conversionRates.mi * 1000; // miles to meters
                break;
            case 'yard':
                valueInMeters = value * conversionRates.yard; // yards to meters
                break;
        }

        // Convert from meters to the target unit
        switch (toUnit) {
            case 'cm':
                result = valueInMeters * 100; // meters to cm
                break;
            case 'in':
                result = valueInMeters * 100 / conversionRates.in; // meters to inches
                break;
            case 'ft':
                result = valueInMeters / conversionRates.ft; // meters to feet
                break;
            case 'm':
                result = valueInMeters; // already in meters
                break;
            case 'km':
                result = valueInMeters / 1000; // meters to kilometers
                break;
            case 'mi':
                result = valueInMeters / (conversionRates.mi * 1000); // meters to miles
                break;
            case 'yard':
                result = valueInMeters / conversionRates.yard; // meters to yards
                break;
        }

        // Display the result
        document.getElementById('lengthResult').innerHTML = `Result: ${result.toFixed(2)} ${toUnit}`;
    });
</script>


